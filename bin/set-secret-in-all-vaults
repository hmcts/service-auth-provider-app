#!/bin/bash

cd $(dirname $(realpath $0))

function usage() {
  echo "usage: ./set-secret-in-all-vaults.sh <team-name>" 
}

if [ -z "${1}" ] ; then
  usage
  exit 1
fi

function keyvaultSet() {
  local env=${1}
  local name=${2}
  local secret=$(python -c "import os; import base64; print(base64.b32encode(os.urandom(10)))")
  az keyvault secret set --vault-name s2s-${env} --name microservicekey-${name} --value ${secret} > /dev/null
}

keyvaultSet sandbox ${1}
keyvaultSet demo ${1}
keyvaultSet aat ${1}
keyvaultSet prod ${1}
keyvaultSet perftest ${1}
keyvaultSet ithc ${1}

./check-all-vaults-for-s2s-secret ${1}

